@model TamagotchiHotel.Models.HotelKamer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>HotelKamer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.HoeveelheidBedden, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    List<int> listItems = new List<int>();
                    listItems.Add(2);
                    listItems.Add(3);
                    listItems.Add(5);
                   }
                    @Html.DropDownListFor(model => model.HoeveelheidBedden, listItems.Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                    @Html.ValidationMessageFor(model => model.HoeveelheidBedden, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KamerType, "KamerType", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KamerType", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KamerType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
